<?xml version="1.0"?>
<config>
    <modules>
        <Com_Module>
            <version>0.0.1</version>
        </Com_Module>
    </modules>
    <global>
        <blocks>
            <com_module>
                <class>Com_Module_Block</class>
            </com_module>
            <adminhtml>
                <rewrite>
                    <catalog_product_edit_tab_options_option>Com_Module_Block_Adminhtml_Catalog_Product_Edit_Tab_Options_Option</catalog_product_edit_tab_options_option>
                </rewrite>
            </adminhtml>
            <catalog>
                <rewrite>
                    <product_view_options_type_select>Com_Module_Block_Catalog_Product_View_Options_Type_Select</product_view_options_type_select>
                </rewrite>
            </catalog>
        </blocks>
        <helpers>
            <com_module>
                <class>Com_Module_Helper</class>
            </com_module>
        </helpers>
        <models>
            <com_module>
                <class>Com_Module_Model</class>
            </com_module>
        </models>
        <resources>
            <com_module_setup>
                <setup>
                    <module>Com_Module</module>
                    <class>Com_Module_Model_Resource_Setup</class>
                    <connection>
                        <use>core_setup</use>
                    </connection>
                </setup>
            </com_module_setup>
            <com_module_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </com_module_write>
            <com_module_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </com_module_read>
        </resources>
    </global>
    <adminhtml>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <com_module>
                                            <title>Custom Option Management</title>
                                        </com_module>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
    <frontend>
        <layout>
            <updates>
                <com_module>
                    <file>com/com.xml</file>
                </com_module>
            </updates>
        </layout>
    </frontend>
    <default>
        <com_module>
            <com_module_group>
                <com_module_optionsnumb>3</com_module_optionsnumb>
            </com_module_group>
        </com_module>
    </default>
</config>